<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= css :application %>
  <%= js :application %>
</head>
<body>
<div id="menu">
    <div class="pure-menu">
        <a class="pure-menu-heading" href="/">CARfetch</a>
        <ul class="pure-menu-list">        

            <li class="pure-menu-item">
                <a href="/about" class="pure-menu-link">About</a>
            </li>
          
            <li class="pure-menu-item">
                <a href="/contact" class="pure-menu-link">Contact</a>
            </li>

            <% if is_logged_in? %>

            <li class="pure-menu-item">
                <a href="/users/<%= @current_user.id %>" class="pure-menu-link"><%= @current_user.user_name %></a>
            </li>

            <li class="pure-menu-item">
                <a href="/cars" class="pure-menu-link">Cars</a>
            </li>

            <li class="pure-menu-item">
                <a href="/logout" class="pure-menu-link">Logout</a>
            </li>

           

            <% else %>

            <li class="pure-menu-item">
                <a href="/register" class="pure-menu-link">Register</a>
            </li>

             <li class="pure-menu-item">
                <a href="/login" class="pure-menu-link">Login</a>
            </li>

            <% end %>
        </ul>
    </div>
</div>
<main>
    <%= yield %>
</main>
</body>
</html>