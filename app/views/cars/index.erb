<h1>ALL CARS</h1>

<ul>
<% @cars.each do |car| %>
  <li><%= car.model %></li>
  <a href="/cars/<%= car.id %>"> 
    <img src="<%= car.image %>" width="300"> 
  </a>
  
  <a href="/cars/<%= car.id %>/edit">Edit</a>

  <form method="post" action="/cars/<%= car.id %>/delete">
    <input type="submit" name="_method" value="DELETE">
    <!-- <button>Delete</button> -->
  </form>
<% end %>
</ul>