<section class="login"> 
  <form class="pure-form" id="login" method="post" action="/login">
      <fieldset>
          <legend>Login</legend>

          <input type="text" placeholder="Email" name="user[email]" class="login-box">
          <input type="password" placeholder="Password" name="user[password]" class="login-box">

          <button type="submit" class="pure-button pure-button-primary" class="login">Login</button>
      </fieldset>
  </form>
</section>

